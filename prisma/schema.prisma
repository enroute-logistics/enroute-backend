generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          Int        @id @default(autoincrement())
  name        String
  code        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  shipments   Shipment[]
  users       User[]
  vehicles    Vehicle[]
  Driver      Driver[]
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String
  role           UserRole     @default(USER)
  organizationId Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  phoneNumber    String?
  shipments      Shipment[]
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Driver {
  id             Int          @id @default(autoincrement())
  name           String
  organizationId Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  vehicle        Vehicle?
}

model Vehicle {
  id              Int           @id @default(autoincrement())
  name            String
  plateNumber     String        @unique
  model           String
  description     String        @default("")
  capacity        Float
  deviceId        String?       @unique
  status          VehicleStatus
  maintenanceDate DateTime?
  organizationId  Int
  driverId        Int?          @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  shipments       Shipment[]
  organization    Organization  @relation(fields: [organizationId], references: [id])
  driver          Driver?       @relation(fields: [driverId], references: [id])
}

model Shipment {
  id             Int            @id @default(autoincrement())
  origin         String
  destination    String
  status         ShipmentStatus
  userId         Int
  vehicleId      Int
  organizationId Int
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  organization   Organization   @relation(fields: [organizationId], references: [id])
  user           User           @relation(fields: [userId], references: [id])
  vehicle        Vehicle        @relation(fields: [vehicleId], references: [id])
}

enum UserRole {
  ADMIN
  USER
  MANAGER
}

enum ShipmentStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
  UNASSIGNED
  STOPPED
}
